    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceRoot}/node_modules/serverless/bin/serverless",
            "args": [
                "offline",
                "--noTimeout",
                "--stage=local",
                "-P",
                "3000",
                "--aws-profile=dev_user"
            ],
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--lazy"
            ]
        }
    ]
}